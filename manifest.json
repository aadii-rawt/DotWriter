{
  "manifest_version": 3,
  "name": "DotWriter",
  "description": "AI-based text writer triggered by --",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "logo.png",
        "style.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
